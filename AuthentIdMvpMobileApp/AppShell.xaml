<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AuthentIdMvpMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AuthentIdMvpMobileApp"
    xmlns:views="clr-namespace:AuthentIdMvpMobileApp.Views"
    Shell.FlyoutBehavior="Flyout">

    <TabBar x:Name="ShellTabBar">
        <Tab Title="Home" Icon="home.svg">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="HomePage" />
        </Tab>
        <Tab Title="Scan" Icon="fingerprint.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ScanPage}" Route="ScanPage" />
        </Tab>
        <Tab Title="Scan History" Icon="history.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ScanHistoryPage}" Route="ScanHistoryPage" />
        </Tab>
        
    </TabBar>

</Shell>
